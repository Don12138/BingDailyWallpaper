.background{
  background: whitesmoke;
  align-items: center;
  justify-content: center;
  display: flex;
  height: 100vh;
  width: 100vw;
}
.colum{
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.each{
  height: 9vh;
  width: 90vw;
  font-size: 30rpx;
  background: wheat;
  border: 1rpx solid #0000009d;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
}
.name{
  font-size: 30rpx ;
  width: 30vw;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  word-break:break-all;
}
.hover_each{
  height: 9vh;
  width: 90vw;
  font-size: 30rpx;
  background: orange;
  border: 1rpx solid #0000009d;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
}
.button{
  background: wheat;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: 1rpx solid #0000009d;
  border-radius: 20rpx;
}
.hover_button{ 
  background: orange;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 20rpx;
  border: 1rpx solid #0000009d;
}
.kuwo{
  color: #ffe443;
}
.wyyyy{
  color: #DD001B;
}
.string{
  background: black;
  height: 1vh;
  width: 100vw;
}